#!/bin/bash
# Pastikan semua script executable

chmod +x /home/jovyan/start
chmod +x /home/jovyan/keep_alive.py

# Buat notebook default jika belum ada
if [ ! -f /home/jovyan/welcome.ipynb ]; then
    cat > /home/jovyan/welcome.ipynb << 'EOL'
{
 "cells": [
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "# Binder Session\n",
    "Server is running successfully!"
   ]
  }
 ],
 "metadata": {
  "kernelspec": {
   "display_name": "Python 3",
   "language": "python",
   "name": "python3"
  }
 },
 "nbformat": 4,
 "nbformat_minor": 4
}
EOL
fi

echo "Setup completed!"
